<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/image_horizontal_margin"
    android:paddingTop="@dimen/image_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vkFriendsItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/vkFriendsItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/vkFriendsItemIcon"
        android:layout_toEndOf="@+id/vkFriendsItemIcon"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        tools:text="name"/>

</RelativeLayout>