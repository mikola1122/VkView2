<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="11"
        android:layout_below="@+id/toolbarMain"
        android:paddingTop="@dimen/image_horizontal_margin"
        android:paddingBottom="@dimen/image_horizontal_margin"
        android:paddingLeft="@dimen/image_vertical_margin"
        android:paddingRight="@dimen/image_vertical_margin">

        <FrameLayout
            android:id="@+id/fragment1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <FrameLayout
            android:id="@+id/fragment2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fragment1"
            android:layout_toEndOf="@+id/fragment1" />
    </LinearLayout>
</RelativeLayout>